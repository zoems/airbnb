<%= simple_form_for(furry) do |f| %>
  <%= f.input :name %>
  <%= f.input :description %>
  <%= f.input :price %>
  <%= f.input :key_skill, collection: %w(Cuddleable Energy ToughLove) %>
  <%= f.input :cuddleable %>
  <%= f.input :energy %>
  <%= f.input :tough_love %>
  <%= f.input :fursona, collection: %w(Wolf Fox Puppy Cat Raccoon Panda) %>
  <%= f.input :photo, as: :file %>
  <%= f.button :submit, class: "btn" %>
<% end %>
