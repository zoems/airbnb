<div class="badge custom-circle bg-primary fs-6">
  <% case furry.fursona %>
    <% when "Cat" %>
      <%= "🐱" %>
    <% when "Puppy" %>
      <%= "🐶" %>
    <% when "Wolf" %>
      <%= "🐺" %>
    <% when "Panda" %>
      <%= "🐼" %>
    <% when "Raccoon" %>
      <%= "🦝" %>
    <% else %>
      <%= "🤡" %>
  <% end %>
</div>
