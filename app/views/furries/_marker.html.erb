<div class="badge custom-circle bg-primary fs-6">
  <% case furry.fursona %>
    <% when "cat" %>
      <%= "🐱" %>
    <% when "puppy" %>
      <%= "🐶" %>
    <% when "wolf" %>
      <%= "🐺" %>
    <% when "panda" %>
      <%= "🐼" %>
    <% when "raccoon" %>
      <%= "🦝" %>
    <% else %>
      <%= "🤡" %>
  <% end %>
</div>
